generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   // Removed @unique to allow same email across different OAuth providers
  name          String?
  avatarUrl     String?
  oauthProvider String
  oauthId       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@unique([oauthProvider, oauthId])
}